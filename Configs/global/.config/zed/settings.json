// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // Disable AI
  "disable_ai": true,

  // Autosave
  "autosave": { "after_delay": { "milliseconds": 500 } },

  // UI style
  "ui_font_size": 18,
  "buffer_font_size": 16,
  "buffer_font_family": "Hack",
  "ui_font_family": "Hack",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Synthwave Alpha"
  },
  "icon_theme": "Catppuccin Latte",
  "terminal": {
    "cursor_shape": "bar",
    "dock": "right",
    "max_scroll_history_lines": 100000
  },
  // Hide sign in prompt on title bar
  "title_bar": {
    "show_sign_in": false
  },
  // Hide collaboration panel
  "collaboration_panel": {
    "button": false
  },
  // Wrap guides
  "wrap_guides": [80],

  // Startup
  // Annoyed that this also impacts the "reload workspace" command, meaning that
  // having this setting enabled causes Zed to discard all my workspaces if I
  // have to reload due to glitches and the like.
  // "restore_on_startup": "none",

  // keybinds

  // Disable annoying mouse features
  "middle_click_paste": false,
  "drag_and_drop_selection": {
    "enabled": false
  },

  // Swap multi-cursor keybind
  "multi_cursor_modifier": "cmd_or_ctrl",

  // Tab settings
  "tab_bar": {
    "show_tab_bar_buttons": false,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "show_close_button": "hidden",
    "activate_on_close": "neighbour",
    "show_diagnostics": "errors"
  },

  // Editor: inlay hints
  "inlay_hints": {
    // Show on Ctrl+Alt
    "toggle_on_modifiers_press": {
      "control": true,
      "alt": true
    }
  },

  "git": {
    // Inline git blame only shows after a second
    // to avoid distractions
    "inline_blame": {
      "delay_ms": 1000,
      "padding": 20
    },
    // Unstaged changes are given a hollow highlight
    "hunk_style": "unstaged_hollow"
  },

  // Language-specific settings
  "languages": {
    "Python": {
      "wrap_guides": [79]
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": [],
      "wrap_guides": [100],
      "tab_size": 2
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": [],
      "wrap_guides": [100],
      "tab_size": 2
    },
    "Java": {
      // Java moment
      "wrap_guides": [120]
    },
    "Svelte": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": [],
      "wrap_guides": [100],
      "tab_size": 2
    }
  },

  // Language server settings
  "lsp": {
    "basedpyright": {
      "settings": {
        "basedpyright.analysis": {
          "diagnosticSeverityOverrides": {
            // I like implicit string concatenation when formatting long strings
            "reportImplicitStringConcatenation": "none"
          }
        }
      }
    },
    "jdtls": {
      "settings": {
        "java": {
          "home": "/home/maddy/.local/share/mise/installs/java/21.0.2"
        }
      }
    }
  }
}
